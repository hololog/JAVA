package while_statement;

public class Ex1 {

	public static void main(String[] args) {

		/*
		 * while문
		 * => 조건식의 위치가 고정되어 있음
		 * => 초기식은 while문보다 윗쪽에 위치해야하며
		 *    증감식은 while문 안쪽에 위치해야합니다.
		 * 
		 * < 기본 문법 >
		 * 초기식;
		 * 
		 * while( 조건식 ){
		 * 		// 조건식이 true일 동안 반복할 실행문
		 * 		// 증감식;
		 * }
		 * 
		 * */
		
		int i=0;
		while(i<10) {
			System.out.println(i + " 안녕하세요");
			i++;
		}
		
		
		
		
		
		
	}

}
