package switch_case;

public class Test1 {

	public static void main(String[] args) {

		// 학생 점수 (score)에 대한 학점(grade) 판별
		// A학점: 90 ~ 100점
		// B학점: 80 ~ 89점
		// C학점: 70 ~ 79점
		// D학점: 60 ~ 69점
		// F학점: 0  ~ 59점
		// 그 외: "점수입력 오류!"
		int score = 63;
		String grade = "";
		
		if(score >= 0 && score <= 100) {
			
			switch (score/10) {
				case 10: grade = "A";	break;
				case 9:  grade = "A";	break;
				case 8:  grade = "B";	break;
				case 7:  grade = "C";	break;
				case 6:  grade = "D";	break;
				case 5:  grade = "F";	break;
				case 4:  grade = "F";	break;
				case 3:  grade = "F";	break;
				case 2:  grade = "F";	break;
				case 1:  grade = "F";	break;
				case 0:  grade = "F";	break;
				default:	grade = "점수입력 오류!";
			}
			
		} else {
			System.out.println("점수입력 오류!");
		}
		
		System.out.println(score + "점의 학점 : " + grade);
		
		
		
		
		
	}

}
