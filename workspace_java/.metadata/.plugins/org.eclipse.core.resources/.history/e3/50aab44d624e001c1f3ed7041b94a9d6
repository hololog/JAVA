package variable;

public class Test4 {

	public static void main(String[] args) {

		/*
		 * printf(), println() 활용하여 구구단 출력
		 * 구구단 2단을 다음과 같이 출력
		 * 
		 * < 2단 >
		 * 2 * 1 = 2
		 * 2 * 2 = 4
		 * 2 * 3 = 6
		 * 2 * 4 = 8
		 * 2 * 5 = 10
		 * 2 * 6 = 12
		 * 2 * 7 = 14
		 * 2 * 8 = 16
		 * 2 * 9 = 18
		 * 
		 * 
		 * */
		int dan = 3;
		int dan1 = dan*1;
		int dan2 = dan*2;
//		String은 %s 사용
//		int 은 %d 사용
		// printf()
		System.out.printf("< %d단 >\n", dan);
		System.out.printf("%d * 1 = %d\n", dan, dan1);
		System.out.printf("%d * 2 = %d\n", dan, dan2);
		
		
		
		
		
		// println()
		
		
		
	}

}
