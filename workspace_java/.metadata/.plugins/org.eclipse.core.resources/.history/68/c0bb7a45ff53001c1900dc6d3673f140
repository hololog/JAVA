package if_statement;

public class Test1 {

	public static void main(String[] args) {
		// 중첩 if문 사용
		// 문자 ch 에 대해 영문자 판별(영문자= 대문자 또는 소문자)
		// 대문자 -> 소문자, 소문자 -> 대문자 변환 후 출력
		// 단, ch가 영문자가 아닐 경우 "입력 오류!" 라고 출력
		
		char ch = '/';
		
		if(대문자 또는 소문자) {
			
			if(대문자) {
				ch = ch + 32;
			} else if(소문자) {
				대문자로 변환
			}
			
			
		} else {
			System.out.println("입력 오류!");
		}
		
		
		
		
		
		
	}

}
